var path      = require('path'),
    utils     = require(path.join(__dirname, '../resources/javascripts/utils')),
    Benchmark = require('benchmark'),
    ST        = require('string-table');

var suite      = new Benchmark.Suite(),
    benchmarks = {},
    results    = [];

{{#privateMembers}}
